      \addplot[domain=0:2, samples=200, draw=none, fill=gray!20, opacity=.35] {x^2-2*x} \closedcycle;
    \end{axis}
  \end{tikzpicture}
  \caption{Função módulo $f(x)=x^2-2x$.}
\end{figure}

\subsubsection*{Exercício 4.}
Calcular a área entre a curva e o eixo \(x\) para \([2,5]\).
\[
\int_{2}^{5}(4x-x^2)\,\dif x
\]

% no preâmbulo:
% \usepgfplotslibrary{fillbetween}

\begin{figure}[H]
  \centering
  \begin{tikzpicture}
    \begin{axis}[
      xmin=1.5, xmax=5.5,
      ymin=-0.5, ymax=4.5,
      axis x line=middle,
      axis y line=middle,
      axis line style={->},
      tick align=outside,
      minor tick num=1,
      xlabel={$x$},
      ylabel={$y$},
      title={$f(x)=4x-x^2$},
      clip=false,
      xlabel style={at={(axis description cs:1,0.6)},anchor=north},
      ylabel style={at={(axis description cs:0.1,1)},anchor=south},
    ]

      % Curva (para aparecer no gráfico, no intervalo todo)
      \addplot[red, domain=2:5, samples=200, thick]
        {-x^2 + 4*x};

      % ===== SOMBREADO 1: entre x=1 e x=4 =====
      \addplot[name path=curvaA, domain=2:4, samples=200]
        {-x^2 + 4*x};
      \addplot[name path=baseA, domain=2:4, samples=2]
        {0};

      \addplot[opacity=.5, fill=gray!20, draw=none]
        fill between[of=curvaA and baseA];

      % ===== SOMBREADO 2: entre x=4 e x=5 =====
      \addplot[name path=curvaB, domain=4:5, samples=200]
        {-x^2 + 4*x};
      \addplot[name path=baseB, domain=4:5, samples=2]
        {0};

      \addplot[opacity=.5, fill=gray!20, draw=none]
        fill between[of=curvaB and baseB];

      % Retas verticais em x=2 e x=5
      \draw[line width=0.6pt] (axis cs:2,0) -- (axis cs:2,{-(2)^2 + 4*(2)});
      \draw[line width=0.6pt] (axis cs:5,0) -- (axis cs:5,{-(5)^2 + 4*(5)});

    \end{axis}
  \end{tikzpicture}
  \caption{Área entre $f(x)$ e o eixo $x$ no intervalo $[1,\,5]$.}
\end{figure}

Como parte fica abaixo do eixo \(x\), separamos:
\[
\int_{2}^{4}(4x-x^2)\,\dif x -\int_{4}^{5}(4x-x^2)\,\dif x
\]
Primeira integral:
\begin{align*}
  & \int_{2}^{4}(4x-x^2)\,dx = \Bigg(\frac{4x^2}{2}\Bigg) - \Bigg(\frac{x^3}{3}\Bigg)\\
  & = \Bigg(\frac{\cancel{4}2x^2}{\cancel{2}}\Bigg) - \Bigg(\frac{x^3}{3}\Bigg)=\frac{6x^2-x^3}{3}\Bigg|_2^4=\\
  & =\frac{32}{3}-\frac{16}{3}=\frac{16}{3}
\end{align*}

Segunda integral (atenção ao sinal global ``menos''):

\begin{align*}
  & -\int_{4}^{5}(4x-x^2)\,dx = -\Bigg[\Bigg(2x^2\Bigg) - \Bigg(\frac{x^3}{3}\Bigg)\Bigg]=\\
  & -\Bigg[\frac{6x^2-x^3}{3}\Bigg]\Bigg|_4^5=\frac{x^3-6x^2}{3}\Bigg|_4^5=\\
  &\frac{5^3-6\cdot5^2}{3}-\frac{4^3-6\cdot4^2}{3}=\\
  &\frac{-25+32}{3}=\frac{7}{3}
\end{align*}

Área total:
\[
  \boxed{\frac{23}{3}\,u.a.}
\]

\subsubsection*{Exercício 5.}
\begin{align*}
\int_{-2}^{2}(4-y^2)\,dy
&=4\int_{-2}^{2}\dif y-\int_{-2}^{2}y^2\,\dif y\\
&=4y\bigg|_{-2}^{2}-\frac{y^3}{3}\bigg|_{-2}^{2}\\
&=4(2-(-2))-\left(\frac{8}{3}-\frac{-8}{3}\right)\\
&=16-\frac{16}{3}
=\boxed{\frac{32}{3}\text{ u.a.}}
\end{align*}


